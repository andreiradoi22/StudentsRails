<% if user_signed_in? %>
  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>User Id</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |student| %>
        <% if student.user == current_user %>
          <tr>
            <td>
              <%= link_to student.first_name + ' ' + student.last_name, student %>
            </td>
            <td><%= student.phone %></td>
            <td><%= student.email %></td>
            <td><%= student.user_id %></td>
            <td><%= button_to "Delete", student, :method => "delete", class: "btn btn-outline-danger btn-sm" %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Student', new_student_path, class:"btn btn-secondary" %>
<% else %>
  <h1>Hello World!</h1>
  This is my first Rails Webpage...
<% end %>
